{{ev-title title='notrequired'}}

{{ev-rules validator=model.validator}}

<h2>How to use?</h2>
<pre><code>
  notrequired: { message: 'Value must be empty' }
  notrequired: 'Value must be empty'
  notrequired: true

</code></pre>

<h2>Example</h2>
<form {{action 'submit' on='submit'}} class="example" autocomplete="off">
  <ul>
    <li class='{{unless model.validationResult.userName.hasError 'hide'}} error-msg'>{{model.validationResult.userName.error}}</li>
    <li>{{input type='text' value=model.userName classNameBindings='model.validationResult.userName.hasError:error-field'}}</li>
    <li><button type='submit'>Submit</button></li>
  </ul>
</form>
