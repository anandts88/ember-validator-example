{{ev-title title='numeric'}}

{{ev-rules validator=model.validator}}

<h2>How to use?</h2>
<pre><code>
  numeric: {
     integer: true,
     messages: {
       integer: 'must be an integer'
     }
   }

   numeric: {
     lessThan: 10,
     messages: {
       lessThan: 'must be less than 10'
     }
   }

   numeric: {
     greaterThan: "10,000.12",
     decimal: 5,
     fraction: 2,
     messages: {
       greaterThan: 'must be greater than 10,000.12'
       decimal: 'must be max of 5 decimal digits',
       fraction: 'must be max of 2 fraction digits'
     }
   }

   numeric: {
     greaterThan: "10,000.12",
     decimal: 5,
     fraction: 2,
     message: 'Valid number'
     messages: {
       greaterThan: 'must be greater than 10,000.12'
     }
   }

</code></pre>

<h2>Example</h2>
<form {{action 'submit' on='submit'}} class='example' autocomplete="off">
  <ul>
    <li>Field1 (must be a number):</li>
    <li class='{{unless model.validationResult.field1.hasError 'hide'}} error-msg'>{{model.validationResult.field1.error}}</li>
    <li>{{input type='text' classNameBindings='model.validationResult.field1.hasError:error-field' value=model.field1}}</li>

    <li>Field2 (must be an integer):</li>
    <li class='{{unless model.validationResult.field2.hasError 'hide'}} error-msg'>{{model.validationResult.field2.error}}</li>
    <li>{{input type='text' classNameBindings='model.validationResult.field2.hasError:error-field' value=model.field2}}</li>

    <li>Field3 (must be an greater than 4 and less than or equal to 100):</li>
    <li class='{{unless model.validationResult.field3.hasError 'hide'}} error-msg'>{{model.validationResult.field3.error}}</li>
    <li>{{input type='text' classNameBindings='model.validationResult.field3.hasError:error-field' value=model.field3}}</li>

    <li>Field4 (must be between 10 and 20):</li>
    <li class='{{unless model.validationResult.field4.hasError 'hide'}} error-msg'>{{model.validationResult.field4.error}}</li>
    <li>{{input type='text' classNameBindings='model.validationResult.field4.hasError:error-field' value=model.field4}}</li>

    <li><button type='submit'>Submit</button></li>
  </ul>
</form>
